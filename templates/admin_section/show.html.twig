{% extends 'base.html.twig' %}

{% block title %}Section{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #edf2f7;
        }

        .details-container {
            width: 100%;
            max-width: 1000px;
            margin: 50px auto;
            padding: 50px;
            border-radius: 20px;
            background-color: #fff;
            box-shadow: 0px 10px 30px -5px rgba(0, 0, 0, 0.1);
            transition: all 0.3s;
        }

        .details-container:hover {
            box-shadow: 0px 15px 90px -10px rgba(0, 0, 0, 0.2);
            transform: translateY(-5px);
        }

        h1 {
            text-align: center;
            color: #007BFF;
            margin-bottom: 20px;
            font-size: 2.5em;
            font-weight: 600;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e6e6e6;
        }

        .table th {
            font-weight: 700;
            color: #007BFF;
            background-color: #f6f9fc;
            border-bottom: 2px solid #dee2e6;
        }

        .btn-link {
            display: inline-block;
            padding: 10px 25px;
            margin-top: 15px;
            border-radius: 5px;
            transition: background-color 0.3s;
            border-radius: 30px;
            background-color: #007BFF;
            color: white !important;
            text-decoration: none;
        }

        .btn-link:hover {
            background-color: #0056b3;
        }
        
        .btn-link:active {
            transform: translateY(0);
            box-shadow: 0px 5px 10px rgba(37, 99, 235, 0.2);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="details-container">
        <h1>Section</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ section.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ section.Name }}</td>
                </tr>
                <tr>
                    <th>Responsable</th>
                    <td>{{ section.responsable.name }}</td>
                </tr>
            </tbody>
        </table>

        <div style="text-align: center;">
            <a href="{{ path('app_admin_section_index') }}" class="btn-link">Retour Ã  la liste</a>
            <a href="{{ path('app_admin_section_edit', {'id': section.id}) }}" class="btn-link">Modifier</a>
        </div>
        
        {{ include('admin_section/_delete_form.html.twig') }}
    </div>
{% endblock %}
