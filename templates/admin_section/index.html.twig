{% extends 'base.html.twig' %}

{% block title %}Section index
{% endblock %}
{% block stylesheets %}
	<style>


		.custom-form {
			margin-bottom: 30px;
			padding: 20px;
			border: 1px solid #e1e1e1;
			border-radius: 5px;
			background-color: #f9f9f9;
		}


		.form-element {
			margin-bottom: 15px;
		}

		.table {
			width: 100%;
			border-collapse: collapse;
			margin-top: 20px;
		}

		.table th,
		.table td {
			padding: 10px 15px;
			border: 1px solid #e1e1e1;
		}

		.table thead th {
			background-color: #007BFF;
			color: #ffffff;
		}

		.table tbody tr:hover {
			background-color: #f6f6f6;
		}

		a {
			color: #007BFF;
			text-decoration: none;
			margin-right: 15px;
		}

		a:hover {
			text-decoration: underline;
		}
		button,
		a.button {
			padding: 10px 20px;
			border: none;
			border-radius: 5px;
			background-color: #007BFF;
			color: #ffffff;
			font-weight: bold;
			cursor: pointer;
			transition: background-color 0.3s;
		}

		button:hover,
		a.button:hover {
			background-color: #0056b3;
		}

		a.button {
			display: inline-block;
			text-align: center;
		}

		.filter-form {
			display: flex;
			align-items: center;
		}

		.form-element {
			margin-right: 15px;
		}
		button[name="reset_filter"] {
			background-color: #f44336;
			float: right 20px;
		}
		.btn-create {
            background-color: #28a745;  /* Vert foncé pour la cohérence */
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            float: right;
            margin-top: 20px;  /* Ajustez pour un meilleur espacement */
            margin-bottom: 20px;
        }
        .btn-create:hover {
            background-color: #218838;
        }

        /* Bouton Show */
        .btn-show {
            background-color: #007BFF;  /* Bleu par défaut pour "Show" */
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
        }
        .btn-show:hover {
            background-color: #0056b3;
        }

        /* Bouton Edit */
        .btn-edit {
            background-color: #ffc107;  /* Jaune pour "Edit" */
            color: black;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
        }
        .btn-edit:hover {
            background-color: #e0a800;
        }

        /* Alignement des boutons */
        .action-buttons {
            display: flex;
            align-items: center;
            gap: 10px;  /* Espacement entre les boutons */
        }
		.style-title {
            margin-top: 20px;
            margin-bottom: 20px;
            text-align: center;
            font-size: 24px;
        }

    </style>
{% endblock %}

{% block body %}
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    
    <h1 class="style-title">Liste des sections</h1>
    <a href="{{ path('app_admin_section_new') }}" class="btn btn-create">Créer une noouvelle section</a>
    
    <!-- Tableau adapté -->
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>responsable</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for section in sections %}
                <tr>
                    <td>{{ section.id }}</td>
                    <td>{{ section.Name }}</td>
                    <td>
                        {% if section.responsable %}
                            {{ section.responsable.name }}
                        {% else %}
                            Pas de responsable
                        {% endif %}
                    </td>
                    <td>
                        <div class="action-buttons">
                            <a href="{{ path('app_admin_section_show', {'id': section.id}) }}" class="btn btn-show">Détail</a>
                            <a href="{{ path('app_admin_section_edit', {'id': section.id}) }}" class="btn btn-edit">Modifier</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}