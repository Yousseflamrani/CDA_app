{% extends 'base.html.twig' %}

{% block title %}Edit Responsable{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Style général du formulaire */
       .form-container {
            width: 100%;
            max-width: 1000px;
            margin: 50px auto;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        h1.form-title {
            text-align: center;
            color: #007BFF;
            margin-bottom: 30px;
        }

        .btn-link, .btn-delete {
            display: inline-block;
            padding: 10px 25px;
            margin-top: 15px;
            border-radius: 5px;
            transition: background-color 0.3s;
             border-radius: 30px;
        }

        .btn-link {
            background-color: #007BFF;
            color: white !important;
            text-decoration: none;
        }

        .btn-delete {
            background-color: #FF4136;
            color: white !important;
            text-decoration: none;
        }

        .btn-link:hover {
            background-color: #0056b3;
        }

        .btn-delete:hover {
            background-color: #E70F00;
        }

    </style>
{% endblock %}

{% block body %}
<div class="form-container">
            <h1>Modifier Responsable</h1>
        
        <div class="text-center">
            {{ include('admin_responsable/_form.html.twig', {'button_label': 'Update'}) }}
        </div>
        <div class="text-center">
            <a href="{{ path('app_admin_responsable_index') }}"class="btn-link">back to list</a>
        </div>
        
         {{ include('admin_responsable/_delete_form.html.twig') }}
         
</div>
   
{% endblock %}
