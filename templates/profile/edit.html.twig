{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #edf2f7;
        }

        .edit-container {
            width: 100%;
            max-width: 800px;
            margin: 50px auto;
            padding: 40px 50px;
            border-radius: 15px;
            background-color: #fff;
            box-shadow: 0px 10px 30px -5px rgba(0, 0, 0, 0.1);
            transition: all 0.3s;
        }

        .edit-container:hover {
            box-shadow: 0px 15px 90px -10px rgba(0, 0, 0, 0.2);
            transform: translateY(-3px);
        }

        h1 {
            text-align: center;
            color: #4a4a4a;
            margin-bottom: 35px;
            font-size: 2.5em;
            font-weight: 600;
        }

        form {
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: 600;
            margin-bottom: 10px;
            display: block;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        select,
        textarea {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ced4da;
            font-size: 16px;
        }

        .btn-update {
            padding: 10px 25px;
            border: none;
            border-radius: 30px;
            background-color: #007BFF;
            color: #FFFFFF;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-update:hover {
            background-color: #0056b3;
        }

        .btn-update:active {
            transform: translateY(1px);
        }

    </style>
{% endblock %}

{% block body %}
    <div class="edit-container">
        <h1>Edit User</h1>
        
        {{ include('profile/_form.html.twig', {'button_label': 'Update'}) }}
        
    </div>

    
{% endblock %}
