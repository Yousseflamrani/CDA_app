{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #edf2f7;
        }

        .profile-container {
            width: 100%;
            max-width: 800px;
            margin: 50px auto;
            padding: 40px 50px;
            border-radius: 15px;
            background-color: #fff;
            box-shadow: 0px 10px 30px -5px rgba(0, 0, 0, 0.1);
            transition: all 0.3s;
        }

        .profile-container:hover {
            box-shadow: 0px 15px 90px -10px rgba(0, 0, 0, 0.2);
            transform: translateY(-3px);
        }

        h1 {
            text-align: center;
            color: #4a4a4a;
            margin-bottom: 35px;
            font-size: 2.5em;
            font-weight: 600;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 25px;
        }

        .table th, .table td {
            padding: 10px 15px;
            text-align: left;
            border-bottom: 1px solid #e6e6e6;
        }

        .table th {
            font-weight: 700;
            color: #007BFF;
            background-color: #f6f9fc;
            border-bottom: 2px solid #dee2e6;
        }

        .btn-edit {
            display: inline-block;
            padding: 10px 25px;
            border-radius: 30px;
            background-color: #007BFF;
            color: white !important;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .btn-edit:hover {
            background-color: #0056b3;
        }

        .btn-edit:active {
            transform: translateY(1px);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="profile-container">
        <h1>Details Profile</h1>
        
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                   
                    <td>••••••••</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Section</th>
                    <td>{{ user.section }}</td>
                </tr>
            </tbody>
        </table>
        
        <div style="text-align: center;">
            <a href="{{ path('app_profile_edit') }}" class="btn-edit">Edit Profile</a>
        </div>
    </div>
{% endblock %}
