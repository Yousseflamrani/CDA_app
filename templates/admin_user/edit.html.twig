{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Style général du formulaire */
        .form-container {
            width: 100%;
            max-width: 1000px;
            margin: 50px auto;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        h1.form-title {
            text-align: center;
            color: #007BFF;
            margin-bottom: 30px;
        }

        .btn-link, .btn-delete {
            display: inline-block;
            padding: 10px 25px;
            margin-top: 15px;
            border-radius: 5px;
            transition: background-color 0.3s;
            border-radius: 30px;
        }

        .btn-link {
            background-color: #007BFF;
            color: white !important;
            text-decoration: none;
        }

        .btn-delete {
            background-color: #FF4136;
            color: white !important;
            text-decoration: none;
        }

        .btn-link:hover {
            background-color: #0056b3;
        }

        .btn-delete:hover {
            background-color: #E70F00;
        }
     

        /* Styles pour le champ roles */
        .role-btn {
            display: inline-block;
            padding: 10px 20px;
            border: 1px solid #007BFF;
            border-radius: 20px;
            color: #007BFF;
            background-color: #FFF;
            cursor: pointer;
            margin-right: 10px;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }

        .role-btn:hover {
            background-color: #007BFF;
            color: #FFF;
        }

        .role-btn input[type="checkbox"] {
            display: none;
        }

        .role-btn input[type="checkbox"]:checked + span {
            background-color: #007BFF;
            color: #FFF;
        }
   
    </style>
{% endblock %}

{% block body %}
<div class="form-container">
    <h1 class="form-title">Edit User</h1>

    <div class="text-center">
        {{ include('admin_user/_form.html.twig', {'button_label': 'Update'}) }}
    </div>
    <div class="text-center">
        <a href="{{ path('app_admin_user_index') }}" class="btn-link">Back to list</a>
    </div>
    <div class="text-center">
        {{ include('admin_user/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
