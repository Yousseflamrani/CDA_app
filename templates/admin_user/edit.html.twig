{% extends 'base.html.twig' %}

{% block title %}Edit User
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		/* Style général du formulaire */
		.form-container {
			width: 100%;
			max-width: 1000px;
			margin: 50px auto;
			padding: 30px;
			background-color: #ffffff;
			border-radius: 15px;
			box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
		}

		h1.form-title {
			text-align: center;
			color: #007BFF;
			margin-bottom: 30px;
		}

		.btn-link,
		.btn-delete {
			display: inline-block;
			padding: 10px 25px;
			margin-top: 15px;
			border-radius: 5px;
			transition: background-color 0.3s;
			border-radius: 30px;
		}

		.btn-link {
			background-color: #007BFF;
			color: white !important;
			text-decoration: none;
		}

		.btn-delete {
			background-color: #FF4136;
			color: white !important;
			text-decoration: none;
		}

		.btn-link:hover {
			background-color: #0056b3;
		}

		.btn-delete:hover {
			background-color: #E70F00;
		}
		.form-check {
			display: inline-block;
			padding: 8px 15px;
			margin: 5px;
			border: 2px solid #007BFF;
			border-radius: 25px;
			cursor: pointer;
			position: relative;
			transition: background-color 0.3s, transform 0.3s;
			will-change: background-color, transform;
		}

		.form-check-input [type="checkbox"] {
			display: none;
		}
		.form-check input[type="checkbox"]:checked + label {
			background-color: #76CDCD;
			color: white;
			transform: scale(1.05);
		}

		.form-check-label {
			font-weight: bold;
			color: black;
		}

		.form-check:hover {
			background-color: #f2f2f2;
		}

		.form-checklabel {
			margin: 0;
			font-weight: 500;
			cursor: pointer;
			position: relative;
			z-index: 1;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="form-container">
		<h1 class="form-title">Modifier l'utilisateur</h1>

		<div class="text-center">
			{{ include('admin_user/_form.html.twig', {'button_label': 'Update'}) }}
		</div>
		<div class="text-center">
			<a href="{{ path('app_admin_user_index') }}" class="btn-link">Revenir en arriére </a>
		</div>
		<div class="text-center">
			{{ include('admin_user/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
