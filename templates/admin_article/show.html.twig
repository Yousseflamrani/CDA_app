{% extends 'base.html.twig' %}

{% block title %}Affaire{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #edf2f7;
        }

        .details-container {
            width: 100%;
            max-width: 1000px;
            margin: 50px auto;
            padding: 50px;
            border-radius: 20px;
            background-color: #fff;
            box-shadow: 0px 10px 30px -5px rgba(0, 0, 0, 0.1);
            transition: all 0.3s;
        }

        .details-container:hover {
            box-shadow: 0px 15px 90px -10px rgba(0, 0, 0, 0.2);
            transform: translateY(-5px);
        }

        h1 {
            text-align: center;
            color: #4a4a4a;
            margin-bottom: 50px;
            font-size: 2.5em;
            font-weight: 600;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e6e6e6;
        }

        .table th {
            font-weight: 700;
            color: #007BFF;
            background-color: #f6f9fc;
            border-bottom: 2px solid #dee2e6;
        }

        .btn-link, .btn-delete {
            display: inline-block;
            padding: 10px 25px;
            margin-top: 15px;
            border-radius: 5px;
            transition: background-color 0.3s;
             border-radius: 30px;
        }

        .btn-link {
            background-color: #007BFF;
            color: white !important;
            text-decoration: none;
        }
          .btn-link:hover {
            background-color: #0056b3;
        }
         .btn-link:active {
            transform: translateY(0);
            box-shadow: 0px 5px 10px rgba(37, 99, 235, 0.2);
        }

        .btn-delete:hover {
            background-color: #E70F00;
        }
    </style>
{% endblock %}



{% block body %}
    <div class="details-container">
    <h1 style="text-align: center; color: #007BFF; margin-bottom: 20px;">Affaire</h1>


    <table class="table">
        <tbody>
            
            <tr>
                <th>Titre</th>
                <td>{{ affaire.title }}</td>
            </tr>
            <tr>
                <th>Compte_c6</th>
                <td>{{ affaire.compteC6 }}</td>
            </tr>
            <tr>
                <th>Phase</th>
                <td>{{ affaire.phase }}</td>
            </tr>
            <tr>
                <th>Journalaffiare</th>
                <td>{{ affaire.journalaffiare }}</td>
            </tr>
            <tr>
                <th>Date_de_debut</th>
                <td>{{ affaire.dateDeDebut ? affaire.dateDeDebut|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Date_de_fin</th>
                <td>{{ affaire.dateDeFin ? affaire.dateDeFin|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Echeance</th>
                <td>{{ affaire.echeance ? affaire.echeance|date('d-m-Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div style="text-align: center;">
        <a href="{{ path('app_admin_article_index') }}" class="btn-link">Retour</a>
        <a href="{{ path('app_admin_article_edit', {'id': affaire.id}) }}" class="btn-link">Modifier</a>
    </div>

</div>
{% endblock %}
